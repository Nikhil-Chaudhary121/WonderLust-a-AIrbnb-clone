<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-3">
            <h3>Listing Details : </h3>
        </div>
    <div class="card col-6 offset-3 show-card">
        <img src="<%= listing.image %>" class="card-img-top" style="height: 40vh;" alt="...">
        <div class="card-body col">
        <h5 class="card-title show-title"><%= listing.title %></h5>
          <p class="card-text"><%= listing.description %> <br>
            &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
            <%= listing.country %> <br>
            <%= listing.location %>
        </p>
          <form class="edti-del-btn" method="post" action="/listings/<%= listing._id %>?_method=DELETE">
            <a href="/listings/<%= listing._id %>/edit" class="mt-3  btn btn-dark my-btn">Edit</a>
            &nbsp; &nbsp; &nbsp;
            <button class="btn btn-dark mt-3">Delete</button>
        </form>
        </div>
      </div>
    </div>
</body>
